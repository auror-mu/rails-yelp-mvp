<div class="container">
<div class="col-sm-6">

<h3><%= @restaurant.name %></h3>
<p> <%= @restaurant.address %></p>
<p><%= @restaurant.category %></p>
<%= link_to "back to the main page", restaurants_path %> <br>
<br>
<%= link_to "leave a review", new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %> <br>
<%= link_to "Delete", restaurant_path(@restaurant),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
</div>
<div>
<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>
</div>
</div>
